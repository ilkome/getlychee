// Inputs
// ===============================================
label, input, button, select, textarea
	font-family font-opensans
	font-size 14px
	color #858d93


// Select
// ===============================================
select
	width auto
	margin-bottom 10px
	padding 4px 10px

	option
		padding 5px 10px


// Text
// ===============================================
input[type="text"]
input[type="password"]
input[type="email"]
input[type="phone"]
	width 100%
	margin-bottom 30px
	padding 15px 30px
	border 1px solid #efc514
	border-radius 5px
	anim()

	&:hover
		border-color #d0ad1b

	&:focus
		border-color #d0ad1b


// Submit
// ===============================================
input[type="submit"]
	width auto
	padding 15px 40px
	color #efc514
	text-transform uppercase
	background color-white
	border 1px solid #efc514
	border-radius 5px
	cursor pointer
	anim()
	
	&:hover
		border-color #d0ad1b

	&:active
		border-color #d0ad1b


// Textarea
// ===============================================
textarea
	width 100%
	height 100px
	max-width 100%
	margin-bottom 30px
	padding 15px 30px
	border 1px solid #efc514
	border-radius 5px

	&:hover
		border-color #d0ad1b

	&:focus
		border-color #d0ad1b


