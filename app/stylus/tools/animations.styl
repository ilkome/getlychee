// Animations
// ===============================================
anim(time = false)
	if time
		transition time ease-out
	else
		transition 0.3s ease-out

anim-all()
	transition all 0.3s ease-out

anim-bg()
	transition background-image 0.3s ease-out

anim-color()
	transition color 0.3s ease-out

anim-op()
	transition opacity 0.3s ease-out

anim-none()
	transition none

anim-hover-op(num = .8)
	transition opacity 0.3s ease-out
	opacity 1
	
	&:hover
		opacity num